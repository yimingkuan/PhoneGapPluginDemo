<?xml version="1.0" encoding="UTF-8"?>
 
    <!-- The basic details of the app. Docs here: http://docs.build.phonegap.com/en_US/configuring_basics.md.html -->
    <!-- versionCode is optional and Android only -->
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10" 
        version     = "1.0.0" >
    <name>PhoneGap Example</name>
    <description>
        An example for phonegap build docs. 
    </description>
    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Kuan Yi Ming
    </author>
    <gap:platform name="ios" />
    <gap:platform name="android" />
    <gap:platform name="winphone" />
 
    <!-- Optional: Customize your app and platform with the preference element. -->
    <!-- PhoneGap Build ones: http://docs.build.phonegap.com/en_US/configuring_preferences.md.html -->
    <!-- Cordova options are also supported: http://cordova.apache.org/docs/en/edge/config_ref_index.md.html -->
    <!-- Additional plugin-specific ones are also supported, if the plugin is added -->
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
    <preference name="phonegap-version" value="cli-5.3.1" />
 
    <!-- Optional: Custom platform-specific preferences, for features not supported via config.xml preferences. -->
    <!-- Docs: http://docs.build.phonegap.com/en_US/configuring_config_file_element.md.html -->
    <gap:config-file platform="ios" parent="UISupportedInterfaceOrientations" mode="replace">
        <array>
            <string>UIInterfaceOrientationLandscapeOmg</string>
        </array>
    </gap:config-file>
 
    <!-- Plugins. Add only those required by the app. -->
    <!-- Core plugin docs are at https://github.com/apache/[PLUGIN-NAME] -->
    <!-- http://docs.build.phonegap.com/en_US/configuring_plugins.md.html -->
    <gap:plugin source="npm" name="cordova-plugin-battery-status" />
    <gap:plugin source="npm" name="cordova-plugin-camera" />
    <gap:plugin source="npm" name="cordova-plugin-console" />
    <gap:plugin source="npm" name="cordova-plugin-contacts" />
    <gap:plugin source="npm" name="cordova-plugin-device" />
    <gap:plugin source="npm" name="cordova-plugin-device-motion" />
    <gap:plugin source="npm" name="cordova-plugin-device-orientation" />
    <gap:plugin source="npm" name="cordova-plugin-dialogs" />
    <gap:plugin source="npm" name="cordova-plugin-file" />
    <gap:plugin source="npm" name="cordova-plugin-file-transfer" />
    <gap:plugin source="npm" name="cordova-plugin-geolocation" />
    <gap:plugin source="npm" name="cordova-plugin-globalization" />
    <gap:plugin source="npm" name="cordova-plugin-inappbrowser" />
    <gap:plugin source="npm" name="cordova-plugin-media" />
    <gap:plugin source="npm" name="cordova-plugin-media-capture" />
    <gap:plugin source="npm" name="cordova-plugin-network-information" />
    <gap:plugin source="npm" name="cordova-plugin-splashscreen" />
    <gap:plugin source="npm" name="cordova-plugin-statusbar" />
    <gap:plugin source="npm" name="cordova-plugin-vibration" />
    <!-- Added the following intents to support the removal of whitelist code from base cordova to a plugin -->
    <!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
    <!-- Required for all Android builds on PGB after version 3.7.0 -->
    <gap:plugin source="npm" name="cordova-plugin-whitelist" version="1.0.0" />

    <!-- Icons and splash screens -->
    <!-- http://docs.build.phonegap.com/en_US/configuring_icons_and_splash.md.html -->
    <icon src="icon.png" />
    <icon gap:platform="ios" src="res/icon/ios/icon-60.png" width="60" height="60" />
    <icon gap:platform="ios" src="res/icon/ios/icon-60@2x.png" width="120" height="120" />
    <icon gap:platform="ios" src="res/icon/ios/icon-60@3x.png" width="180" height="180" />
    <icon gap:platform="ios" src="res/icon/ios/icon-76.png" width="76" height="76" />
    <icon gap:platform="ios" src="res/icon/ios/icon-76@2x.png" width="152" height="152" />
    <icon gap:platform="ios" src="res/icon/ios/icon-small.png" width="29" height="29" />
    <icon gap:platform="ios" src="res/icon/ios/icon-small@2x.png" width="58" height="58" />
    <icon gap:platform="ios" src="res/icon/ios/icon-small@3x.png" width="87" height="87" />
    <icon gap:platform="ios" src="res/icon/ios/icon-40.png" width="40" height="40" />
    <icon gap:platform="ios" src="res/icon/ios/icon-40@2x.png" width="80" height="80" />
    <icon gap:platform="ios" src="res/icon/ios/icon.png" width="57" height="57" />
    <icon gap:platform="ios" src="res/icon/ios/icon@2x.png" width="114" height="114" />
    <icon gap:platform="ios" src="res/icon/ios/icon-72.png" width="72" height="72" />
    <icon gap:platform="ios" src="res/icon/ios/icon-72@2x.png" width="144" height="144" />
    <icon gap:platform="ios" src="res/icon/ios/icon-50.png" width="50" height="50" />
    <icon gap:platform="ios" src="res/icon/ios/icon-50@2x.png" width="100" height="100" />
    <icon gap:platform="android" src="res/icon/android/icon-36-ldpi.png" gap:qualifier="ldpi" />
    <icon gap:platform="android" src="res/icon/android/icon-48-mdpi.png" gap:qualifier="mdpi" />
    <icon gap:platform="android" src="res/icon/android/icon-72-hdpi.png" gap:qualifier="hdpi" />
    <icon gap:platform="android" src="res/icon/android/icon-96-xhdpi.png" gap:qualifier="xhdpi" />
    <icon gap:platform="android" src="res/icon/android/icon-144-xxhdpi.png" gap:qualifier="xxhdpi" />
    <icon gap:platform="android" src="res/icon/android/icon-192-xxxhdpi.png" gap:qualifier="xxxhdpi" />
    <icon src="res/icon/winphone/icon.png" gap:platform="winphone" />
    <icon src="res/icon/winphone/tileicon.png" gap:platform="winphone" gap:role="background" />
    <gap:splash src="splash.png" />
    <gap:splash gap:platform="ios" src="res/splash/ios/Default.png" width="320" height="480" />
    <gap:splash gap:platform="ios" src="res/splash/ios/Default@2x.png" width="640" height="960" />
    <gap:splash gap:platform="ios" src="res/splash/ios/Default-568h@2x.png" width="640" height="1136" />
    <gap:splash gap:platform="ios" src="res/splash/ios/Default-667h@2x.png" width="750" height="1334" />
    <gap:splash gap:platform="ios" src="res/splash/ios/Default-Portrait-736h@3x.png" width="1242" height="2208" />
    <gap:splash gap:platform="ios" src="res/splash/ios/Default-Landscape-736h@3x.png" width="2208" height="1242" />
    <gap:splash gap:platform="ios" src="res/splash/ios/Default-Portrait.png" width="768" height="1024" />
    <gap:splash gap:platform="ios" src="res/splash/ios/Default-Landscape.png" width="1024" height="768" />
    <gap:splash gap:platform="ios" src="res/splash/ios/Default-Portrait@2x.png" width="1536" height="2048" />
    <gap:splash gap:platform="ios" src="res/splash/ios/Default-Landscape@2x.png" width="2048" height="1536" />
    <gap:splash gap:platform="android" gap:qualifier="ldpi" src="res/splash/android/ldpi.png" />
    <gap:splash gap:platform="android" gap:qualifier="mdpi" src="res/splash/android/mdpi.png" />
    <gap:splash gap:platform="android" gap:qualifier="hdpi" src="res/splash/android/hdpi.png" />
    <gap:splash gap:platform="android" gap:qualifier="xhdpi" src="res/splash/android/xhdpi.png" />
    <gap:splash gap:platform="android" gap:qualifier="xxhdpi" src="res/splash/android/xxhdpi.png" />
    <gap:splash gap:platform="android" gap:qualifier="xxxhdpi" src="res/splash/android/xxxhdpi.png" />
    <gap:splash src="splash/winphone/splash.jpg" gap:platform="winphone" />
   
    <!--
        Define access to external domains.
        <access />            - a blank access tag denies access to all external resources.
        <access origin="*" /> - a wildcard access tag allows access to all external resource.
        Otherwise, you can specify specific domains:
        <access origin="http://phonegap.com" />                    - allow any secure requests to http://phonegap.com/
        <access origin="http://phonegap.com" subdomains="true" />  - same as above, but including subdomains, such as http://build.phonegap.com/
        <access origin="http://phonegap.com" browserOnly="true" /> - only allows http://phonegap.com to be opened by the child browser.
    -->
 
    <!-- Optional: access elements outside the app. Required only if the app needs to make AJAX calls to remote servers, etc. -->
    <!-- http://docs.build.phonegap.com/en_US/configuring_access_elements.md.html for docs -->
    <access origin="*"/>
    <!-- The rest are also required for new Android builds, as they need the Whitelist plugin: https://github.com/apache/cordova-plugin-whitelist -->
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
