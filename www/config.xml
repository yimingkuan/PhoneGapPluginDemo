<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.example"
        versionCode = "10" 
        version     = "1.0.0" >
    <name>PhoneGap Example</name>
    <description>
        An example for phonegap build docs. 
    </description>
    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Kuan Yi Ming
    </author>
        
    <icon src="icon.png" />
    <splash src="splash.png" />
    
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="phonegap-version" value="cli-5.2.0" />
    <preference name="android-build-tool" value="gradle" />
    
    <plugin name="cordova-plugin-battery-status" />
    <plugin name="cordova-plugin-camera" />
    <plugin name="cordova-plugin-console" />
    <plugin name="cordova-plugin-contacts" />
    <plugin name="cordova-plugin-device" />
    <plugin name="cordova-plugin-device-motion" />
    <plugin name="cordova-plugin-device-orientation" />
    <plugin name="cordova-plugin-dialogs" />
    <plugin name="cordova-plugin-file" />
    <plugin name="cordova-plugin-file-transfer" />
    <plugin name="cordova-plugin-geolocation" />
    <plugin name="cordova-plugin-globalization" />
    <plugin name="cordova-plugin-inappbrowser" />
    <plugin name="cordova-plugin-media" />
    <plugin name="cordova-plugin-media-capture" />
    <plugin name="cordova-plugin-network-information" />
    <plugin name="cordova-plugin-splashscreen" />
    <plugin name="cordova-plugin-statusbar" />
    <plugin name="cordova-plugin-vibration" />
    <plugin name="cordova-plugin-whitelist" />
    
    <access origin="*"/>
  
    <platform name="ios">
        <access origin="*" />
        <preference name="prerendered-icon" value="false" />
        <icon src="res/icon/ios/icon-60.png" width="60" height="60" />
        <icon src="res/icon/ios/icon-60@2x.png" width="120" height="120" />
        <icon src="res/icon/ios/icon-60@3x.png" width="180" height="180" />
        <icon src="res/icon/ios/icon-76.png" width="76" height="76" />
        <icon src="res/icon/ios/icon-76@2x.png" width="152" height="152" />
        <icon src="res/icon/ios/icon-small.png" width="29" height="29" />
        <icon src="res/icon/ios/icon-small@2x.png" width="58" height="58" />
        <icon src="res/icon/ios/icon-small@3x.png" width="87" height="87" />
        <icon src="res/icon/ios/icon-40.png" width="40" height="40" />
        <icon src="res/icon/ios/icon-40@2x.png" width="80" height="80" />
        <icon src="res/icon/ios/icon.png" width="57" height="57" />
        <icon src="res/icon/ios/icon@2x.png" width="114" height="114" />
        <icon src="res/icon/ios/icon-72.png" width="72" height="72" />
        <icon src="res/icon/ios/icon-72@2x.png" width="144" height="144" />
        <icon src="res/icon/ios/icon-50.png" width="50" height="50" />
        <icon src="res/icon/ios/icon-50@2x.png" width="100" height="100" />
        <splash src="res/splash/ios/Default.png" width="320" height="480" />
        <splash src="res/splash/ios/Default@2x.png" width="640" height="960" />
        <splash src="res/splash/ios/Default-568h@2x.png" width="640" height="1136" />
        <splash src="res/splash/ios/Default-667h@2x.png" width="750" height="1334" />
        <splash src="res/splash/ios/Default-Portrait-736h@3x.png" width="1242" height="2208" />
        <splash src="res/splash/ios/Default-Landscape-736h@3x.png" width="2208" height="1242" />
        <splash src="res/splash/ios/Default-Portrait.png" width="768" height="1024" />
        <splash src="res/splash/ios/Default-Landscape.png" width="1024" height="768" />
        <splash src="res/splash/ios/Default-Portrait@2x.png" width="1536" height="2048" />
        <splash src="res/splash/ios/Default-Landscape@2x.png" width="2048" height="1536" />
        <gap:config-file parent="UISupportedInterfaceOrientations" mode="replace">
            <array>
                <string>UIInterfaceOrientationPortrait</string>
            </array>
        </gap:config-file>
    </platform>
    <platform name="android">
        <allow-navigation href="http://*/*" />
        <allow-navigation href="https://*/*" />
        <allow-navigation href="data:*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
        <allow-intent href="market:*" />
        <plugin name="cordova-plugin-crosswalk-webview" />
        <icon src="res/icon/android/icon-36-ldpi.png" gap:qualifier="ldpi" />
        <icon src="res/icon/android/icon-48-mdpi.png" gap:qualifier="mdpi" />
        <icon src="res/icon/android/icon-72-hdpi.png" gap:qualifier="hdpi" />
        <icon src="res/icon/android/icon-96-xhdpi.png" gap:qualifier="xhdpi" />
        <icon src="res/icon/android/icon-144-xxhdpi.png" gap:qualifier="xxhdpi" />
        <icon src="res/icon/android/icon-192-xxxhdpi.png" gap:qualifier="xxxhdpi" />
        <icon src="res/icon/android/icon-36-ldpi.png" gap:qualifier="ldpi" />
        <icon src="res/icon/android/icon-48-mdpi.png" gap:qualifier="mdpi" />
        <icon src="res/icon/android/icon-72-hdpi.png" gap:qualifier="hdpi" />
        <icon src="res/icon/android/icon-96-xhdpi.png" gap:qualifier="xhdpi" />
        <icon src="res/icon/android/icon-144-xxhdpi.png" gap:qualifier="xxhdpi" />
        <icon src="res/icon/android/icon-192-xxxhdpi.png" gap:qualifier="xxxhdpi" />
        <splash gap:qualifier="ldpi" src="res/splash/android/ldpi.png" />
        <splash gap:qualifier="mdpi" src="res/splash/android/mdpi.png" />
        <splash gap:qualifier="hdpi" src="res/splash/android/hdpi.png" />
        <splash gap:qualifier="xhdpi" src="res/splash/android/xhdpi.png" />
        <splash gap:qualifier="xxhdpi" src="res/splash/android/xxhdpi.png" />
        <splash gap:qualifier="xxxhdpi" src="res/splash/android/xxxhdpi.png" />
    </platform>
    <platform name="wp8">
        <access origin="*" />
        <icon src="res/icon/winphone/icon.png" />
        <icon src="res/icon/winphone/tileicon.png" gap:role="background" />
        <splash src="splash/winphone/splash.jpg" />
    </platform>
</widget>
